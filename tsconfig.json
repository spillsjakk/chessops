{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": ["src/**/*"]
}
